@{
    ViewBag.Title = "Registracija";
}
<table align="center"><td>REGISTRACIJA</td></table>
<div>
    @ViewBag.Message
</div>
<style>
    body {
        background-color: #00ffff;
    }
</style>
<form action="ObradiRegistraciju" method="post">
    <table align="center">
        <tr>
            <td>Korisnicko ime:</td>
            <td><input type="text" name="korisnickoIme" /></td>
        </tr>

        <tr>
            <td>Lozinka:</td>
            <td><input type="password" name="lozinka" /></td>
        </tr>

        <tr>
            <td>Ime:</td>
            <td><input type="text" name="ime" /></td>
        </tr>

        <tr>
            <td>Prezime:</td>
            <td><input type="text" name="prezime" /></td>
        </tr>

        <tr>
            <td>Pol:</td>
            <td>
                <input list="polovi" name="pol" />
                <datalist id="polovi">
                    <option value="MUSKO"></option>
                    <option value="ZENSKO"></option>
                </datalist>
            </td>
        </tr>

        <tr>
            <td>Datum rodjenja:</td>
            <td><input type="date" name="datumRodjenja" /></td>
        </tr>

        <tr>
            <td colspan="2" align="center">
                <input type="submit" value="Registracija" />

            </td>
        </tr>
    </table>
</form>
<form action="~/Autentifikacija/Pocetna" method="post">
    <table align="center"><tr><td colspan="2"> <input type="submit" value="Pocetna" /></td></tr></table>
</form>
